---
layout: layouts/main.njk
---
<article>
  <h1>{{ title }}</h1>

  {% if screenshots %}
    {% for img in screenshots %}
      {% image img.src, img.alt %}
    {% endfor %}
  {% endif %}

  {% if animations %}
    {% for img in animations %}
      <image src="{{img.src}}" alt="{{img.alt}}">
    {% endfor %}
  {% endif %}

  {% if play %}
    <p>
      <a href=play/>play in the browser</a>
    </p>
  {% endif %}

  {% if github %}
    <p>
      <a href={{ github }}>view github repository</a>
    </p>
  {% endif %}

  {% if started or status %}
    <p>
  {% if started %}
      Started on {{ started | fullDate }}.
  {% elif started_month and started_year %}
      Started in {{ started_month }}, {{ started_year }}.
  {% elif started_year %}
      Started in {{ started_year }}.
  {% endif %}
  {% if status %}
      {{ status }}
      {%- if ended %}
        on {{ ended | fullDate }}
      {%- elif ended_month and ended_year -%}
        in {{ ended_month }}, {{ ended_year }}
      {%- elif ended_year -%}
        in {{ ended_year }}
      {%- endif -%}
      .
  {% endif %}
    </p>
  {% endif %}

  {{ content | safe }}

</article>
<footer>
<nav>
<a href=..>Back</a>
</nav>
</footer>
