---
layout: layouts/main.njk
---
<article>
  <h1>{{ title }}</h1>

  {% if screenshots %}
    {% for img in screenshots %}
      {% image img.src, img.alt %}
    {% endfor %}
  {% endif %}

  {% if play %}
    <p>
      <a href=play/>play in the browser</a>
    </p>
  {% endif %}

  {% if github %}
    <p>
      <a href={{ github }}>view github repository</a>
    </p>
  {% endif %}

  {{ content | safe }}

</article>
<footer>
<a href=..>Back</a>
</footer>
